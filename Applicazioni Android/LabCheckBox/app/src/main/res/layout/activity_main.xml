<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layoutPrimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primo   "

            />
<RadioGroup
    android:id="@+id/primo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/primo3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkMenu"
        android:text="3"
        />

    <RadioButton
        android:id="@+id/primo5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkMenu"
        android:text="5"
        />
    <RadioButton
        android:id="@+id/primo7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="checkMenu"
        android:text="7"
        />
</RadioGroup>
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secondo "

            />
        <RadioGroup
            android:id="@+id/secondo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/secondo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="3"
            />

        <RadioButton
            android:id="@+id/secondo5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="5"
            />
        <RadioButton
            android:id="@+id/secondo7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="7"
            />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contorno"

            />
        <RadioGroup
            android:id="@+id/contorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/contorno3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="3"
            />

        <RadioButton
            android:id="@+id/contorno5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="5"
            />
        <RadioButton
            android:id="@+id/contorno7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="7"
            />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frutta   "

            />
        <RadioGroup
            android:id="@+id/frutta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/frutta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="3"
            />

        <RadioButton
            android:id="@+id/frutta5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="5"
            />
        <RadioButton
            android:id="@+id/frutta7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkMenu"
            android:text="7"

            />
        </RadioGroup>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="totale:"/>
           <TextView
               android:id="@+id/totale"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="0"/>
       </LinearLayout>
       </LinearLayout>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="vai alla cassa"
    android:onClick="cassa"
    />

</LinearLayout>
</RelativeLayout>